{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Docker .NET Attach (Preview)",
            "type": "docker",
            "request": "attach",
            "platform": "netCore",
            "sourceFileMap": {
                "/src": "${workspaceFolder}"
            }
        },
        {
            "name": ".NET Core Launch CarvedRock",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-carvedrock-api",
            "program": "${workspaceFolder}/CarvedRock.Api/bin/Debug/net6.0/CarvedRock.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/CarvedRock.Api",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\\\bNow listening on:\\\\s+(https?://\\\\S+)"
            },
            "launchBrowser": {
                "enabled": true,
                "args": "${auto-detect-url}/swagger",
                "windows": {
                    "command": "cmd.exe",
                    "args": "/C start ${auto-detect-url}/swagger"
                }
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "Docker .NET Core Launch CarvedRock",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run-carvedrock-api: debug",
            "netCore": {
                "appProject": "${workspaceFolder}/CarvedRock.Api/CarvedRock.Api.csproj"
            },
            "dockerServerReadyAction": {                
                "uriFormat": "%s://localhost:%s/swagger"
            }   
        },
        {
            "name": ".NET Core Launch HelloCode",
            "type": "coreclr",
            "request": "launch",
